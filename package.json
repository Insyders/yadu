{
  "name": "@halfserious/yadu",
  "version": "2.1.6",
  "description": "Package and Deploy our AWS lambdas",
  "main": "src/index.js",
  "bin": {
    "yadu": "src/index.js"
  },
  "scripts": {
    "lint": "eslint **/*.js",
