{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest/globals": true
  },
  "extends": ["airbnb-base", "plugin:jest/recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": "off",
    "no-async-promise-executor": "off",
    "consistent-return": "off",
    "no-param-reassign": "off",
    "no-restricted-syntax": "off",
    "max-len": [
      2,
      140 // 140 chars
    ]
  },
  "plugins": ["jest", "prettier"],
  "settings": {
    "jest": {
      "version": 26
    }
  }
}
